<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
	
	android:orientation="vertical">


<TextView
android:paddingTop="19dp"
android:paddingLeft="5dp"
android:paddingBottom="5dp"
android:background="?attr/colorPrimary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       
android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:id="@+id/bar6"
        android:text="@string/app_name" 
		style="@style/Casual"
	/>


<RelativeLayout
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<TextView
   android:id="@+id/scoreText"
   android:layout_centerHorizontal="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
android:layout_toLeftOf="@+id/scoreText"
		android:text="Question :"
		android:textSize="20sp"
android:textStyle="bold"
		/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
android:layout_marginLeft="5dp"
		android:text="0/10"
android:textStyle="bold"
		android:textSize="20sp"
android:layout_toRightOf="@+id/scoreText"
		android:id="@+id/score"/>
</RelativeLayout>

	<RelativeLayout
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
	android:layout_width="wrap_content"
    android:layout_height="wrap_content">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Isan ny marina:"
   android:layout_marginRight="5dp"
		android:textSize="15sp"
		android:layout_toLeftOf="@+id/marina"
		android:id="@+id/scoreMarina"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="15sp"
		android:layout_alignParentRight="true"
		android:id="@+id/marina"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="15sp"
		android:layout_alignParentRight="true"
   android:layout_below="@+id/marina"
		android:id="@+id/diso"/>
<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Isan ny diso     :"
   android:layout_marginRight="5dp"
		android:textSize="15sp"
		android:layout_toLeftOf="@+id/diso"
   android:layout_below="@+id/scoreMarina"
		android:id="@+id/scoreDiso"/>
	</RelativeLayout>

    <TextView
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
        android:text="Iza no filoha ny Firenena?"
style="@style/Cursive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:textSize="25sp"
		android:padding="8dp"
android:layout_marginTop="5dp"
		android:layout_marginBottom="40dp"
		android:id="@+id/question"/>
	<Button
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="Ravalomanana Marc"
style="@style/Casual"
		android:background="@drawable/ruound"
		android:textColor="#ffffff"
		android:padding="8dp"
		android:layout_marginBottom="24dp"
		android:id="@+id/choice1"/>
	<Button
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="Andry Rajoelina"
style="@style/Casual"
		android:background="@drawable/ruound"
		android:textColor="#ffffff"
		android:padding="8dp"
		android:layout_marginBottom="24dp"
		android:id="@+id/choice2"/>
	
	<Button
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="Rajonarimampianina Hery"
style="@style/Casual"
		android:background="@drawable/ruound"
		android:textColor="#ffffff"
		android:padding="8dp"
		android:layout_marginBottom="24dp"
		android:id="@+id/choice3"/>
	
	<Button
android:layout_marginRight="16dp"
android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="Ratsiraka Didier"
style="@style/Casual"
		android:background="@drawable/ruound"
		android:textColor="#ffffff"
		android:padding="8dp"
		android:layout_marginBottom="24dp"
		android:id="@+id/choice4"/>
	

</LinearLayout>
